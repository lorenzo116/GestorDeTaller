@model GestionDeTaller.Models.OrdenesDeMantenimiento

@{
    ViewData["Title"] = "Iniciar";
}

<h1>Confirmar Iniciar</h1>
<br/>
<h4>¿Desea iniciar con el mantenimiento? Pulse Iniciar para comenzar o presione "Regresar" para cancelar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Iniciar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Iniciar" class="btn btn-outline-primary btn-sm"/>
                <a asp-action="Listar" class="btn btn-outline-primary btn-sm">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
