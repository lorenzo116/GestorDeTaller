@model GestionDeTaller.Models.OrdenesDeMantenimiento

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Ordenes De Mantenimiento</h1>
<br />

<div>
    <a asp-action="Listar" asp-controller="OrdenesDeMantenimientoRecibidas" class="btn btn-outline-primary btn-sm">Regresar a la lista de mantenimientos</a>
</div>
<hr />
<br />
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreDelCliente" class="control-label"></label>
                <input asp-for="NombreDelCliente" class="form-control" />
                <span asp-validation-for="NombreDelCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionDelProblema" class="control-label"></label>
                <input asp-for="DescripcionDelProblema" class="form-control" />
                <span asp-validation-for="DescripcionDelProblema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoDeAdelanto" class="control-label"></label>
                <input asp-for="MontoDeAdelanto" class="form-control" />
                <span asp-validation-for="MontoDeAdelanto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
