@model GestionDeTaller.Models.Mantenimientos

@{
    ViewData["Title"] = "AgregarMantenimiento";
}

<h1>Agregar Mantenimiento</h1>
<br />
<div>
    <a asp-action="Listar" asp-controller="CatalogoDeArticulos" class="btn btn-outline-primary btn-sm">Regresar a la lista de articulos</a>

    <a asp-action="Listar" asp-route-Id="@ViewBag.Id_Articulo" class="btn btn-outline-primary btn-sm">Regresar a la lista de mantenimienos</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarMantenimiento">
            @Html.HiddenFor(m => m.Id_Articulo)

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostoFijo" class="control-label"></label>
                <input asp-for="CostoFijo" class="form-control" />
                <span asp-validation-for="CostoFijo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary btn-sm"/>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

