@model GestionDeTaller.UI.Models.ArticuloDetallado

@{
    ViewData["Title"] = "DetallesDeArticulo";
}

<h1>Detalles de articulo</h1>

<div>
    <h4>Articulo detallado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CantidadDeOrdenesTerminadas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantidadDeOrdenesTerminadas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CantidadDeOrdenesEnProceso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantidadDeOrdenesEnProceso)
        </dd>
    </dl>
</div>
<br />
<div>
    <h4>Repuestos asociados</h4>
    <hr />
    <br />
    @foreach (var item in Model.repuestosAsosiados)
    {
        <div class="card bg-secondary mb-3" style="max-width: 20rem;">
            <div class="card-header">Repuesto asociado</div>
            <div class="card-body">
                <h4 class="card-title">@item.Nombre</h4>
                <p class="card-text">
                    <h5>Precio:</h5>
                    @item.Precio
                    <hr />
                    <h5>Descripción</h5>
                    @item.Descripcion
                </p>
            </div>
        </div>
        <br />
    }
</div>
<div>
    <a asp-action="Listar" class="btn btn-outline-primary">Regresar a la lista</a>
</div>
