@model GestionDeTaller.Models.OrdenesDeMantenimiento

@{
    ViewData["Title"] = "Iniciar";
}

<h1>Confirmar Inicior</h1>
<br/>
<h4>¿Desea iniciar con el mantenimiento? Pulse Iniciar para comenzar o presione "Regresar" para cancelar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Iniciar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Iniciar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listar">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
