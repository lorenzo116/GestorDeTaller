@model IEnumerable<GestionDeTaller.Models.Articulo>

@{
    ViewData["Title"] = "Listar";
}
<br />
<h1>Catalogo de artículos</h1>
<br />
<p>
    <a asp-action="AgregarArticulo" class="btn btn-outline-primary btn-sm">Agregar artículo nuevo </a>
</p>
<br />
<hr />
<table class="table">
    <thead>
        <tr class="table-primary">

            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group mr-2" role="group" aria-label="First group">
                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Editar</a>
                            &nbsp
                            <a asp-action="DetallesDeArticulo" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Detalles</a>
                            &nbsp
                            <a asp-action="Listar" asp-controller="CatalogoDeRepuestos" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Detalles de Repuestos</a>
                            &nbsp
                            <a asp-action="Listar" asp-controller="CatalogoDeMantenimientos" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Detalles de Mantenimientos</a>
                            &nbsp
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
